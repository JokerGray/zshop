.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}
.shop{
  width: 100%;
  height: 850rpx;
  overflow: hidden;  
  position: fixed;   
  bottom: 0rpx;
  z-index: 10000;
  border-radius: 20rpx 20rpx 0rpx 0rpx; 
  background: #fff;
}
