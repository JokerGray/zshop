.time{
    font-family: 'PingFang-SC-Regular';
    position: absolute;
    right: 8rpx;
    bottom: 8rpx;
    font-size: 16rpx;
    background: rgba(0,0,0,.6);
    width: 52rpx;
    text-align: center;
    color: #fff;
}
.switch-box{
    font-size: 30rpx;
    color: #333333;
    line-height: 108rpx;
}
.switch-box>view{
border-bottom: 1rpx solid #E6E6E6;
}
.add-btn{
    color: #FF226E;
    font-size: 32rpx;
    line-height: 66rpx;
    border: 2rpx solid #FF226E;
    text-align: center;
    border-radius: 10rpx;
    margin-top: 180rpx;
    background-color: #fff;
}