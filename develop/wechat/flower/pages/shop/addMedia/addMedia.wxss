.media-box{
    overflow: hidden;
}
.media-box textarea{
    font-size: 30rpx;
    width: 100%;
    min-height: 185rpx;
}
.video-box{
    margin: 20rpx 0;
    width: 300rpx;
    min-height: 170rpx;
    overflow: hidden;
    position: relative;
    border: 1rpx solid #E6E6E6;
    /* background: #E6E6E6; */
}
/* .video-box image{
    display: block;
