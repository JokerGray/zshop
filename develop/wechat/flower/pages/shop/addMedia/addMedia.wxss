} */
.video-box .empty{
    display: block;
    width: auto;
    /* height: 100%; */
    height: 180rpx;
    align-content: center;
    line-height: 180rpx;
    margin: auto;
}
.video-box video{
    /* display: block; */
    width: auto;
    height: 180rpx;
    position: absolute;
    top: 0;
    left: 0;
}
.controls {
  position: relative;
  height: 100%;
  top: 0;
  left:0;
  right: 0;
  bottom:0;
  display: flex;
}
.play{
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    text-align: center;
    align-content: center;
    /* border: 1rpx solid #E6E6E6; */
    margin: auto;
    margin-top: 30rpx;
    line-height: 130rpx;
}
.playAdd{
  font-size: 155rpx;
  font-weight	:200;
  color: #E6E6E6;
}
