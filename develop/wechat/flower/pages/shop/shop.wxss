/* 弹出框 */
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}

.shop{
  width: 100%;
  height: 850rpx;
  overflow: hidden;  
  position: fixed;   
  bottom: 0rpx;
  z-index: 100000;
  border-radius: 20rpx 20rpx 0rpx 0rpx; 
  background: #fff;
}
.shopheader{
width:750rpx;
height:100rpx;
background:#F7F7F7;
border-radius:20px 20px 0px 0px;
display: flex;
align-items: center;
justify-content: content;
}
